{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "resolveJsonModule": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true
    }
}